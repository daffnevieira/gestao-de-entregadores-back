generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entregador {
  id          Int           @id @default(autoincrement())
  nome        String
  status      String
  localizacao Localizacao[]
}

model Localizacao {
  id           Int        @id @default(autoincrement())
  latitude     Float
  longitude    Float
  timestamp    DateTime   @default(now())
  entregador   Entregador @relation(fields: [entregadorId], references: [id])
  entregadorId Int
}
